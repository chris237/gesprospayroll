<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="assets_report" name="GESPROS Payroll Report Assets" inherit_id="web.assets_pdf">
        <xpath expr="." position="inside">
            <style type="text/scss">
                $gespros-primary: #2c8ecb;
                $gespros-secondary: #08a5b7;
                $gespros-accent: #91c73e;
                $gespros-text: #1b1b1b;

                .gespros-payslip {
                    font-family: 'Lato', 'Helvetica Neue', Arial, sans-serif;
                    color: $gespros-text;
                    font-size: 11px;

                    h1, h2, h3, h4 {
                        color: $gespros-primary;
                        font-weight: 700;
                        text-transform: uppercase;
                        letter-spacing: 1px;
                    }

                    .header {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        margin-bottom: 16px;

                        .company {
                            max-width: 45%;

                            .company-name {
                                font-size: 16px;
                                font-weight: 700;
                                margin-bottom: 4px;
                                color: $gespros-primary;
                            }

                            .company-address {
                                font-size: 10px;
                                line-height: 1.4;
                            }
                        }

                        .document-meta {
                            text-align: right;
                            .document-title {
                                font-size: 18px;
                                font-weight: 700;
                                color: $gespros-primary;
                                margin-bottom: 4px;
                            }
                            .document-number {
                                font-size: 12px;
                                color: darken($gespros-text, 10%);
                            }
                        }
                    }

                    .info-grid {
                        display: grid;
                        grid-template-columns: repeat(3, 1fr);
                        gap: 12px;
                        margin-bottom: 16px;

                        .info-card {
                            border: 1px solid lighten($gespros-primary, 30%);
                            border-radius: 6px;
                            padding: 8px 10px;
                            background-color: lighten($gespros-primary, 45%);

                            .label {
                                font-size: 10px;
                                color: $gespros-primary;
                                text-transform: uppercase;
                                font-weight: 700;
                                margin-bottom: 2px;
                            }

                            .value {
                                font-size: 12px;
                                font-weight: 600;
                            }
                        }
                    }

                    .table-section {
                        margin-bottom: 18px;

                        .section-title {
                            background-color: $gespros-primary;
                            color: #fff;
                            padding: 6px 10px;
                            font-weight: 700;
                            text-transform: uppercase;
                            font-size: 11px;
                        }

                        table {
                            width: 100%;
                            border-collapse: collapse;

                            thead {
                                background-color: lighten($gespros-primary, 38%);
                                color: $gespros-primary;
                                text-transform: uppercase;
                                font-size: 10px;
                                th {
                                    padding: 6px 8px;
                                    border-bottom: 1px solid lighten($gespros-primary, 20%);
                                }
                            }

                            tbody tr:nth-child(even) {
                                background-color: lighten($gespros-primary, 45%);
                            }

                            td {
                                padding: 6px 8px;
                                border-bottom: 1px solid lighten($gespros-primary, 30%);
                            }

                            .text-right {
                                text-align: right;
                            }

                            .text-center {
                                text-align: center;
                            }
                        }
                    }

                    .totals-grid {
                        display: grid;
                        grid-template-columns: repeat(3, 1fr);
                        gap: 12px;

                        .total-card {
                            background: linear-gradient(135deg, $gespros-primary, $gespros-secondary);
                            color: #fff;
                            padding: 10px;
                            border-radius: 6px;
                            text-align: center;

                            .label {
                                text-transform: uppercase;
                                font-size: 10px;
                                margin-bottom: 4px;
                                letter-spacing: 0.5px;
                            }

                            .value {
                                font-size: 14px;
                                font-weight: 700;
                            }
                        }
                    }

                    .footer {
                        margin-top: 30px;
                        font-size: 10px;
                        display: flex;
                        justify-content: space-between;
                        color: darken($gespros-text, 10%);

                        .signature-block {
                            min-width: 45%;
                            border-top: 1px solid lighten($gespros-primary, 25%);
                            padding-top: 8px;
                            text-align: center;
                        }
                    }
                }
            </style>
        </xpath>
    </template>
</odoo>
